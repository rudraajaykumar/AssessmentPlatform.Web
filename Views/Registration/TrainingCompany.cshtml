@model AssessmentPlatform.Model.DTO.TrainingCompanyInput
@{
}
<h1>Creat or Edit College</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TrainingCompany" asp-controller="Registration">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TrainingCompanyName" class="control-label"></label>
                <input asp-for="TrainingCompanyName" class="form-control" placeholder="Name" />
                <span asp-validation-for="TrainingCompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerName" class="control-label"></label>
                <input asp-for="OwnerName" class="form-control" placeholder="UniversityName" />
                <span asp-validation-for="OwnerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerMobile" class="control-label"></label>
                <input asp-for="OwnerMobile" class="form-control" placeholder="Name" />
                <span asp-validation-for="OwnerMobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerEmailID" class="control-label"></label>
                <input asp-for="OwnerEmailID" class="form-control" placeholder="UniversityName" />
                <span asp-validation-for="OwnerEmailID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminName" class="control-label"></label>
                <input asp-for="AdminName" class="form-control" placeholder="Name" />
                <span asp-validation-for="AdminName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AdminMobile" class="control-label"></label>
                <input asp-for="AdminMobile" class="form-control" placeholder="Name" />
                <span asp-validation-for="AdminMobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminEmailID" class="control-label"></label>
                <input asp-for="AdminEmailID" class="form-control" placeholder="UniversityName" />
                <span asp-validation-for="AdminEmailID" class="text-danger"></span>
            </div>
            <div class="form-group">
                Select Course: <br />
                @{
                    var selectCourse = ViewBag.Course;
                    if (selectCourse != null)// && select.ToList().Count > 0)
                    {
                        foreach (var item in ViewBag.Course)
                        {
                            <input type="checkbox" name="course" value="@item.Value" @(Html.Raw(item.Selected ? "checked=\"checked\"" : "")) /> @item.Text  <br />
                        }
                    }
                }
            </div>
            <div class="form-group">
                <label asp-for="TrainingCompanyAddress" class="control-label"></label>
                <input asp-for="TrainingCompanyAddress" class="form-control" placeholder="Name" />
                <span asp-validation-for="TrainingCompanyAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyIncorporationNumber" class="control-label"></label>
                <input asp-for="CompanyIncorporationNumber" class="form-control" placeholder="UniversityName" />
                <span asp-validation-for="CompanyIncorporationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyGSTNumber" class="control-label"></label>
                <input asp-for="CompanyGSTNumber" class="form-control" placeholder="Name" />
                <span asp-validation-for="CompanyGSTNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyPANNumber" class="control-label"></label>
                <input asp-for="CompanyPANNumber" class="form-control" placeholder="UniversityName" />
                <span asp-validation-for="CompanyPANNumber" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>